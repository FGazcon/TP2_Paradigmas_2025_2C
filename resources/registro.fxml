<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.TextAlignment?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.RegistroController"
            prefWidth="1280" prefHeight="720"
            style="-fx-background-color: #E6D0B4;">

    <top>
        <Label text="Registro de jugadores"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-underline: true;">
            <padding>
                <Insets top="40" bottom="20"/>
            </padding>
        </Label>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="100"> <VBox alignment="CENTER_LEFT">

            <VBox spacing="25"
                  style="-fx-background-color: #9C2626; -fx-padding: 40; -fx-background-radius: 5;
                             -fx-border-color: black; -fx-border-width: 3;">

                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Circle radius="10" fill="green"/>
                    <Label text="Jugador 1" style="-fx-text-fill: black; -fx-font-size: 20;"/>
                    <TextField fx:id="txtJugador1" promptText="Ingresar nombre..."
                               prefWidth="200" style="-fx-background-color: #F0B340; -fx-background-radius: 5;"/>
                </HBox>

                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Circle radius="10" fill="green"/>
                    <Label text="Jugador 2" style="-fx-text-fill: black; -fx-font-size: 20;"/>
                    <TextField fx:id="txtJugador2" promptText="Ingresar nombre..."
                               prefWidth="200" style="-fx-background-color: #F0B340; -fx-background-radius: 5;"/>
                </HBox>

                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Circle radius="10" fill="green"/>
                    <Label text="Jugador 3" style="-fx-text-fill: black; -fx-font-size: 20;"/>
                    <TextField fx:id="txtJugador3" promptText="Ingresar nombre..."
                               prefWidth="200" style="-fx-background-color: #F0B340; -fx-background-radius: 5;"/>
                </HBox>

                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Circle radius="10" fill="green"/>
                    <Label text="Jugador 4" style="-fx-text-fill: black; -fx-font-size: 20;"/>
                    <TextField fx:id="txtJugador4" promptText="Ingresar nombre..."
                               prefWidth="200" style="-fx-background-color: #F0B340; -fx-background-radius: 5;"/>
                </HBox>
            </VBox>

        </VBox>

            <VBox alignment="CENTER">

                <Button text="COMENZAR&#10;PARTIDA"
                        fx:id="btnComenzar"
                        onAction="#comenzarPartida"
                        prefWidth="400" prefHeight="180"
                        textAlignment="CENTER"
                        style="-fx-background-color: linear-gradient(to right, #FF5733, #FF8F33);
                               -fx-font-size: 36px; -fx-text-fill: black; -fx-font-weight: bold;
                               -fx-background-radius: 5; -fx-border-color: black; -fx-border-width: 5;"/>
            </VBox>

        </HBox>
    </center>

    <bottom>
        <AnchorPane>
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>

            <Button text="SALIR"
                    onAction="#salir"
                    prefWidth="150" prefHeight="40"
                    AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
                    style="-fx-background-color: #F0B340; -fx-text-fill: black;
                           -fx-font-size: 20px; -fx-font-weight: bold;
                           -fx-background-radius: 5; -fx-border-color: black; -fx-border-width: 2;"/>

            <ImageView fitWidth="150" preserveRatio="true"
                       AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0">
                <image>
                    <Image url="@img/logo_fiuba.png"/>
                </image>
            </ImageView>
        </AnchorPane>
    </bottom>

</BorderPane>