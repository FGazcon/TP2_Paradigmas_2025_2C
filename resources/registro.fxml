<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.RegistroController"
            prefWidth="1280" prefHeight="720">

    <left>
        <VBox alignment="CENTER" spacing="25">
            <padding><Insets top="40" left="40" bottom="40" right="40"/></padding>

            <VBox spacing="25" style="-fx-background-color: #8B0000; -fx-padding: 40; -fx-background-radius: 15;">
                <!-- Jugador 1 -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Circle radius="10" fill="green"/>
                    <Label text="Jugador 1" style="-fx-text-fill: white; -fx-font-size: 20;"/>
                    <TextField fx:id="txtJugador1" promptText="Ingresar nombre..."/>
                </HBox>

                <!-- Jugador 2 -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Circle radius="10" fill="green"/>
                    <Label text="Jugador 2" style="-fx-text-fill: white; -fx-font-size: 20;"/>
                    <TextField fx:id="txtJugador2" promptText="Ingresar nombre..."/>
                </HBox>

                <!-- Jugador 3 -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Circle radius="10" fill="green"/>
                    <Label text="Jugador 3" style="-fx-text-fill: white; -fx-font-size: 20;"/>
                    <TextField fx:id="txtJugador3" promptText="Ingresar nombre..."/>
                </HBox>

                <!-- Jugador 4 -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Circle radius="10" fill="green"/>
                    <Label text="Jugador 4" style="-fx-text-fill: white; -fx-font-size: 20;"/>
                    <TextField fx:id="txtJugador4" promptText="Ingresar nombre..."/>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="40">
            <Label text="Registro de jugadores"
                   style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-underline: true;"/>

            <Button text="COMENZAR PARTIDA"
                    fx:id="btnComenzar"
                    onAction="#comenzarPartida"
                    prefWidth="400" prefHeight="120"
                    style="-fx-background-color: linear-gradient(to right, #FF5733, #FF8F33);
                           -fx-font-size: 36px; -fx-text-fill: black; -fx-font-weight: bold;
                           -fx-background-radius: 15;"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="40">
            <padding>
                <Insets top="20" bottom="20"/>
            </padding>

            <Button text="SALIR"
                    onAction="#salir"
                    prefWidth="200" prefHeight="50"
                    style="-fx-background-color: #E5A32A; -fx-text-fill: black;
                           -fx-font-size: 24px; -fx-font-weight: bold;
                           -fx-background-radius: 10;"/>

            <ImageView fitWidth="250" preserveRatio="true">
                <image>
                    <Image url="@img/logo_fiuba.png"/>
                </image>
            </ImageView>
        </HBox>
    </bottom>

</BorderPane>