<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.JuegoController"
            prefWidth="1280" prefHeight="720"
            style="-fx-background-color: #E6D0B4;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="60"
              style="-fx-background-color: #F0B340; -fx-padding: 10; -fx-border-color: black; -fx-border-width: 0 0 2 0;">
            <padding><Insets left="30" right="30"/></padding>
            <Label text="CATAN" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #9C2626;"/>
            <Separator orientation="VERTICAL" prefHeight="20" />
            <Label fx:id="lblTurno" text="Turno de: JUGADOR 1" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <Label fx:id="lblPV" text="PV: 0 / 10" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <center>
        <StackPane alignment="CENTER" style="-fx-padding: 0 0 0 100;">
            <Pane fx:id="tableroPane" prefWidth="800" prefHeight="600" />

        </StackPane>
    </center>

    <right>
        <VBox spacing="15" alignment="TOP_CENTER" prefWidth="260"
              style="-fx-background-color: #D2B48C; -fx-padding: 20; -fx-border-color: black; -fx-border-width: 0 0 0 2;">

            <Label text="ACCIONES" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #000;"/>
            <Separator/>

            <VBox alignment="CENTER" spacing="10" style="-fx-border-color: #333; -fx-border-width: 1; -fx-padding: 10;">
                <Label fx:id="lblJugadorActual" text="Jugador Actual: JUGADOR 1" wrapText="true" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #000;"/>
                <Button text="TIRAR DADOS" fx:id="btnDados" onAction="#tirarDados" prefWidth="180" prefHeight="40"
                        style="-fx-background-color: #9C2626; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Label fx:id="lblValorDados" text="Dados: -" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            </VBox>

            <Separator/>

            <VBox alignment="CENTER" spacing="10">
                <Label text="CONSTRUCCIÓN" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Button fx:id="btnCarretera" text="Carretera (M+L)" onAction="#construirCarretera" prefWidth="180" style="-fx-background-color: #8B4513; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;"/>
                <Button fx:id="btnPoblado" text="Poblado (M+L+O+T)" onAction="#construirPoblado" prefWidth="180" style="-fx-background-color: #3D9970; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;"/>
                <Button fx:id="btnCiudad" text="Ciudad (2T+3P)" onAction="#construirCiudad" prefWidth="180" style="-fx-background-color: #333333; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;"/>
            </VBox>

            <Separator/>

            <VBox alignment="CENTER" spacing="10">
                <Label text="COMERCIO Y DESARROLLO" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <Button fx:id="btnComercio"
                        text="COMERCIO"
                        onAction="#comerciarConJugador"
                        prefWidth="180"
                        style="-fx-background-color: #F0B340; -fx-text-fill: black; -fx-font-size: 16px; -fx-background-radius: 5;"/>

                <Button fx:id="btnComprarDesarrollo" text="COMPRAR DESARROLLO"  onAction="#mostrarVentanaComprarDesarrollo" prefWidth="180" style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;"/>
                <Button fx:id="btnUsarDesarrollo" text="USAR DESARROLLO"  prefWidth="180" style="-fx-background-color: #87CEEB; -fx-text-fill: black; -fx-font-size: 16px; -fx-background-radius: 5;"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/> </VBox>
    </right>

    <bottom>
        <AnchorPane>
            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color: #F0B340; -fx-padding: 15; -fx-border-color: black; -fx-border-width: 2 0 0 0;"
                  AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="260"> <padding><Insets left="20" right="20"/></padding>
                <Label text="INVENTARIO ACTUAL:" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <Separator orientation="VERTICAL" prefHeight="30" style="-fx-background-color: black;"/>
                <HBox spacing="15" alignment="CENTER">
                    <VBox alignment="CENTER" prefWidth="65" prefHeight="65" style="-fx-background-color: #6B8E23; -fx-padding: 5; -fx-border-color: black; -fx-border-width: 1; -fx-background-radius: 3;">
                        <Label text="Madera" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                        <Label fx:id="lblInvMadera" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    </VBox>
                    <VBox alignment="CENTER" prefWidth="65" prefHeight="65" style="-fx-background-color: #B22222; -fx-padding: 5; -fx-border-color: black; -fx-border-width: 1; -fx-background-radius: 3;">
                        <Label text="Ladrillo" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                        <Label fx:id="lblInvLadrillo" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    </VBox>
                    <VBox alignment="CENTER" prefWidth="65" prefHeight="65" style="-fx-background-color: #F0F8FF; -fx-padding: 5; -fx-border-color: black; -fx-border-width: 1; -fx-background-radius: 3;">
                        <Label text="Oveja" style="-fx-text-fill: #333; -fx-font-size: 14px;"/>
                        <Label fx:id="lblInvOveja" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    </VBox>
                    <VBox alignment="CENTER" prefWidth="65" prefHeight="65" style="-fx-background-color: #DAA520; -fx-padding: 5; -fx-border-color: black; -fx-border-width: 1; -fx-background-radius: 3;">
                        <Label text="Trigo" style="-fx-text-fill: #333; -fx-font-size: 14px;"/>
                        <Label fx:id="lblInvTrigo" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    </VBox>
                    <VBox alignment="CENTER" prefWidth="65" prefHeight="65" style="-fx-background-color: #808080; -fx-padding: 5; -fx-border-color: black; -fx-border-width: 1; -fx-background-radius: 3;">
                        <Label text="Piedra" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                        <Label fx:id="lblInvPiedra" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    </VBox>
                </HBox>
            </HBox>

            <VBox spacing="5" alignment="CENTER"
                  prefWidth="260" prefHeight="100" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0"
                  style="-fx-background-color: #D2B48C; -fx-padding: 5; -fx-border-color: black; -fx-border-width: 2 0 0 2;">

                <Button fx:id="btnTerminarTurno"
                        text="TERMINAR TURNO >>"
                        onAction="#terminarTurno"
                        prefWidth="220" prefHeight="35"
                        style="-fx-background-color: #E5A32A; -fx-text-fill: black; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5;"/>

                <Button fx:id="btnSalir"
                        text="SALIR AL MENÚ"
                        onAction="#salir"
                        prefWidth="220" prefHeight="35"
                        style="-fx-background-color: #9C2626; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;"/>
            </VBox>
        </AnchorPane>
    </bottom>

</BorderPane>